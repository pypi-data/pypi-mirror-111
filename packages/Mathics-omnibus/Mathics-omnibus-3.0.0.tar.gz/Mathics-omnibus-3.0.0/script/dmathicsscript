#!/bin/bash
if [ -n "$DEBUG" ]; then
    set -x
fi
DOCKER=${DOCKER:-docker}
XAUTH=${XAUTH:-$HOME/.Xauthority}
touch $XAUTH

TAG=${TAG:-latest}
MATHICS_IMAGE=${MATHICS_IMAGE:-mathicsorg/mathics:${TAG}}

$DOCKER run -it \
	--rm \
	--env "DISPLAY=$DISPLAY" \
	--name mathics-cli \
	--tty \
	--interactive \
	--network=host \
	--volume "/tmp:/usr/src/app/data" \
        $MATHICS_IMAGE \
	--mode cli -- $@
